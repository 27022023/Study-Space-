<body>

    <!-- MENU BUTTON -->
    <button id="menu-btn">Menu</button>

    <!-- SIDEBAR -->
    <div id="sidebar">
        <h2>Study Sphere</h2>
        <a href="index.html">Home</a>
        <a href="flashcards.html">Flashcards</a>
        <a href="language.html">Language Learning</a>
